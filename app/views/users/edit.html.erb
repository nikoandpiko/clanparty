<h1>edit form here</h1>

<div class="container edit-profile-container">
  <div class="row justify-content-center">
    <div class="col-xl-6 lg-6">
      <h2 class="profile-details-h2">Set your profile</h2>

      <%= simple_form_for @user, url: user_path(@user) do |f| %>
        <%= f.input :nickname %>
        <%= f.input :bio %>
        <%= f.input :discord %>
        <%= f.input :role, collection: @roles%>
        <%= f.button :submit, "Confirm details", class: "btn-lg btn-dark edit-profile-button" %>
      <% end %>
      <%= button_to "Edit schedule", edit_schedule_path(@user), method: :get %>
    </div>
  </div>
</div>

